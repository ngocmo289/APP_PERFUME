<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_prd"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/img_sp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/pink_nhat"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/name_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boss Perfume"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 1000$"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sale: 0%"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_new"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/item_popular"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="POPULAR"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/item_sale"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="SALE OFF"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pen"
                />
            <Button
                android:layout_alignParentBottom="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btn_delete"
                android:background="@drawable/delete"/>

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>