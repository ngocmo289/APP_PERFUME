<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#DFDFDF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/frame_img"
            android:layout_marginRight="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/camera"
                android:layout_gravity="center"
                android:id="@+id/add_img"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_text1"
                    android:text="NEW"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@drawable/udt_image_checkbox"
                    android:id="@+id/add_item_new_cb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_text1"
                    android:text="POPULAR"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@drawable/udt_image_checkbox"
                    android:id="@+id/add_item_popular_cb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_text1"
                    android:text="SALE OFF"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@drawable/udt_image_checkbox"
                    android:id="@+id/add_item_sale_cb"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/add_name_edt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:id="@+id/add_price_edt"
            android:inputType="number"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text1"
            android:layout_gravity="center"
            android:text="$"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="sale"
            android:id="@+id/add_sale_edt"
            android:inputType="number"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text1"
            android:layout_gravity="center"
            android:text="%"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descript"
        android:id="@+id/add_des_edt"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add"
            android:text="Add"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"/>
        <Button
            android:id="@+id/add_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add"
            android:text="Cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>